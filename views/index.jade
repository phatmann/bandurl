extends layout
block content
  .container
    .four.columns
      form(action='/', method='get')
        input(placeholder='Band',name='band')
        a.button#search_button(href="#") Search
      h2 About
      p BandURL provides a link for any band on any page

      h2 Contact Us
      p thephatmann@gmail.com

    .right.ten.columns.offset-by-two
      if band
        h2 #{band.name}
      if songs
        h3 Songs
        .songs
          for song in songs
            li
              a(href=#{song.url}) #{song.name}