@import 'nib'

.container
  margin-top 60px

h2
  smooth-button()
  width 90%
  font-size 2em

h3
  margin-top 20px
  font-size 1.5em
  
pre
  font-family courier
  background-color rgba(0,0,0,.8)
  color yellow
  width 100%
  margin-bottom 20px
  padding 10px
  border 1px solid black

.terms
  font-style italic

.images
  margin-top 20px
  clearfix()
  div
    width 300px
    height 300px
    float left
    margin-left 20px

  img
    max-height 100%
    max-width 100%
  